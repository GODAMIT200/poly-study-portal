{
  "name": "poly-study-portal",
  "version": "1.0.0",
  "description": "Polytechnic Study Portal with Node.js Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --ignore uploads/ --ignore data/",
    "dev-watch": "nodemon server.js --watch *.js --watch js/ --ignore uploads/ --ignore data/",
    "pm2-start": "pm2 start server.js --name poly-portal --watch --ignore-watch=\"uploads data logs\"",
    "pm2-stop": "pm2 stop poly-portal",
    "pm2-restart": "pm2 restart poly-portal",
    "pm2-logs": "pm2 logs poly-portal",
    "install-deps": "npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "polytechnic",
    "study",
    "portal",
    "education",
    "nodejs",
    "express"
  ],
  "author": "Amit Singh Gujjar",
  "license": "MIT"
}
